{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "noUncheckedSideEffectImports": true,
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "rest-sync-lite/*": [
        "../src/*"
      ],
      "rest-sync-lite": [
        "../src/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "../src"
  ]
}